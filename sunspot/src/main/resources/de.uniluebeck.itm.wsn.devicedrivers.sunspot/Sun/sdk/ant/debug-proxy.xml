<project name="debug-proxy">
	
	<target name="-pre-debug-proxy-run"/>
    
    <target name="-post-debug-proxy-run"/>

    <target name="-do-debug-proxy-run">
		<fail unless="port">Must set port on command line (-Dport=xxxx)</fail>
		<fail unless="remoteId">The property remoteId must be set to indicate the serial number of the SPOT being debugged. Use -DremoteId=xxx</fail>
    	
    	<java classpath="${proxy.bootclasspath}"
              classname="squawk.debug.DebugProxy" 
              fork="true"
              failonerror="true">
            <jvmarg value="-Djava.library.path=${sunspot.lib}"/>
            <sysproperty key="SERIAL_PORT" value="${port}"/>
	    <sysproperty key="remote.channel" value="${remote.channel}"/>
	    <sysproperty key="remote.pan.id" value="${remote.pan.id}"/>
	    <sysproperty key="remote.transmit.power" value="${remote.transmit.power}"/>
	    <sysproperty key="squawk.startup.arguments" value="${squawk.startup.arguments}"/>
	    <sysproperty key="proxy.spot_id" value="${remoteId}"/>
	    <sysproperty key="proxy.classpath" value="${proxy.classpath}"/>
	    <sysproperty key="proxy.loglevel" value="${proxy.loglevel}"/>
	    <sysproperty key="keystore.path" value="${spotclient.keyStore.dir}"/>
	    <sysproperty key="proxy.echo.port" value="${proxy.echo.port}"/>
	    <sysproperty key="spotclient.verbose" value="${spotclient.verbose}"/>
	    <sysproperty key="midlet" value="${midlet}"/>
    	    <sysproperty key="spot.basestation.sharing" value="${basestation.shared}" />
    	</java> 
    </target>
	
    <target name="-do-debug">
		<fail unless="remoteId">Must set remoteId on command line (-DremoteId=xxxx)</fail>
    	<antcall target="debug-proxy-run"/>
	</target>
</project>
