<project name="echo">
	<import file="find-spots.xml"/>

	<target name="-do-echo" depends="-check-port, -local-echo, -remote-echo"/>

	<target name="-check-port">
		<fail unless="port">Must set port on command line (-Dport=xxxx)</fail>
	</target>

	<target name="-local-echo" unless="remoteId">
        <java classpath="${spotclient.classpath}"
              classname="com.sun.spot.client.SerialPortLogger"
              fork="true"
              failonerror="true">
            <jvmarg value="-Djava.library.path=${sunspot.lib}"/>
            <arg value="${port}"/>
        </java>
    </target>

	<target name="-remote-echo" if="remoteId">
        <java classpath="${spotclient.classpath}"
              classname="com.sun.spot.client.RemoteLogger"
              fork="true"
              failonerror="true">
            <jvmarg value="-Djava.library.path=${sunspot.lib}"/>
            <sysproperty key="spot.mesh.route.logging" value="${spot.mesh.route.logging}"/>
	    <sysproperty key="spot.basestation.sharing" value="${basestation.shared}" />
            <sysproperty key="remote.channel" value="${remote.channel}"/>
            <sysproperty key="remote.pan.id" value="${remote.pan.id}"/>
            <sysproperty key="remote.transmit.power" value="${remote.transmit.power}"/>
            <arg value="${port}"/>
            <arg value="${remoteId}"/>
            <arg value="${spotclient.keyStore.dir}"/>
            <arg value="${master.echo.port}"/>
        </java>
    </target>
</project>

